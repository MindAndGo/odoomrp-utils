<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="product_button_lot_template_form_view">
            <field name="name">product.template.button.lot.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="position" eval="100"/>
            <field name="arch" type="xml">
               
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" name="action_production_lot_list" icon="fa-truck" string="Lots" type="object"  attrs="{'invisible':[('tracking', '=', 'none')]}"/>
                </xpath>
                    
            </field>
        </record>
        
        
        <record model="ir.ui.view" id="product_expiry_lot_template_form_view">
            <field name="name">product.template.expiry.lot.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.view_template_property_form"/>
            <field name="position" eval="100"/>
            <field name="arch" type="xml">
               

                <field name="tracking" position="after">
                    <field name="closest_expiry_date" 
                           attrs="{'invisible':[('tracking', '=', 'none')]}"/>
                    
                </field>
                    
            </field>
        </record>

       
       
       
    </data>
</openerp>
